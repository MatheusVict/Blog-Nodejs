<h2 style="color: white;">Categorias: </h2>
<hr>
<a href="/adm/categorias/add"><button class="btn btn-success">Adicionar</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug:{{slug}}</small><br>
            <small>Data de criação: {{data}}</small><br><br>
           <a href="/adm/categorias/edit/{{_id}}"><button class="btn btn-success mt-2">Editar categoria</button></a>
           <form action="/adm/categorias/delet" method="post">
            <input type="hidden" name="id" value="{{_id}}"><!-- vai enviar o id pra apagar-->
            <button type="submit" class="btn btn-danger mt-3">Apagar categoria</button>
           </form>
        </div>
    </div>
{{else}}
    <h3 class="mt-4" align="center">Nenhuma categoria existente...</h3>
{{/each}}