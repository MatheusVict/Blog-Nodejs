{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h3>Nova postagem:</h3>
        <form action="/adm/postagens/new" method="post">
        <label for="titulo">Título: </label>
        <input type="text" name="titulo" placeholder="Título da postagem"  class="form-control">
        <label for="slug">Slug: </label>
        <input type="text" name="slug" placeholder="Slug da postagem"  class="form-control">
        <label for="descrição">Descrição: </label>
        <input type="text" name="descrição" placeholder="Descrição da postagem"  class="form-control">
        <label for="conteudo">Conteúdo: </label>
        <textarea name="conteudo" id="" cols="30" rows="5"  placeholder="conteúdo da postagem" class="form-control"></textarea>
        <label for="categoria">Categoria</label>
        <select name="categoria" class="custom-select"><
            {{#each categorias}}
            <option value="{{_id}}">{{nome}}</option>
            {{else}}
            <option value="0">Nenhuma categoria registrada</option>
            {{/each}}
        </select>
        <button class="btn btn-success mt-4" type="submit">Criar</button>


        </form>
    </div>
</div>